  "metadata": {
    "version": "1.1.0",
    "description": "Configuration MCP pour N8N Expert Consultant utilisant le serveur officiel n8n-mcp",
    "repository": "https://github.com/czlonkowski/n8n-mcp",
    "documentation": "https://github.com/czlonkowski/n8n-mcp/blob/main/README.md"
  },
  "configurations": {
    "minimal": {
      "description": "Configuration minimale - Documentation n8n uniquement (sans API)",
      "mcpServers": {
        "n8n-mcp": {
          "command": "npx",
          "args": ["n8n-mcp"],
          "env": {
            "MCP_MODE": "stdio",
            "LOG_LEVEL": "error",
            "DISABLE_CONSOLE_OUTPUT": "true"
          }
        }
      },
      "capabilities": [
        "Node documentation (1,084 nodes: 537 core + 547 community)",
        "Property validation and schemas (99% coverage)",
        "Example workflow configurations (2,646 examples)",
        "Template library (2,709 templates)",
        "Node metadata and operation details (63.6% coverage)"
      ]
    },
    "complete": {
      "description": "Configuration complète - Documentation + Gestion n8n (avec N8N_API_KEY)",
      "mcpServers": {
        "n8n-mcp": {
          "command": "npx",
          "args": ["n8n-mcp"],
          "env": {
            "MCP_MODE": "stdio",
            "N8N_API_URL": "http://localhost:5678/api/v1",
            "N8N_API_KEY": "${N8N_API_KEY}",
            "LOG_LEVEL": "error",
            "DISABLE_CONSOLE_OUTPUT": "true"
          }
        }
      },
      "capabilities": [
        "All minimal configuration capabilities",
        "Workflow management (create, read, update, delete)",
        "Workflow execution with parameters",
        "Execution monitoring and details",
        "Workflow listing and filtering",
        "System health checks",
        "Trigger management"
      ]
    },
    "docker_local": {
      "description": "Configuration pour n8n local avec Docker",
      "mcpServers": {
        "n8n-mcp": {
          "command": "npx",
          "args": ["n8n-mcp"],
          "env": {
            "MCP_MODE": "stdio",
            "N8N_API_URL": "http://host.docker.internal:5678/api/v1",
            "N8N_API_KEY": "${N8N_API_KEY}",
            "WEBHOOK_SECURITY_MODE": "moderate",
            "LOG_LEVEL": "error",
            "DISABLE_CONSOLE_OUTPUT": "true"
          }
        }
      }
    },
    "cloud": {
      "description": "Configuration pour n8n Cloud",
      "mcpServers": {
        "n8n-mcp": {
          "command": "npx",
          "args": ["n8n-mcp"],
          "env": {
            "MCP_MODE": "stdio",
            "N8N_API_URL": "https://your-instance.app.n8n.cloud/api/v1",
            "N8N_API_KEY": "${N8N_API_KEY}",
            "LOG_LEVEL": "error",
            "DISABLE_CONSOLE_OUTPUT": "true"
          }
        }
      }
    }
  },
